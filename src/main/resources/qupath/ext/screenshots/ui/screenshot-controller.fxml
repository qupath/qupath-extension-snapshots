            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <TextField id="tfDirectory" fx:id="tfDirectory" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" />
            <TextField id="tfName" fx:id="tfName" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" />
            <Label text="Directory" />
            <Label text="Name" GridPane.rowIndex="1" />
            <Button fx:id="btnDirectory" mnemonicParsing="false" onAction="#promptForDirectory" text="Choose" GridPane.columnIndex="2" />
            <Label text="Delay (seconds)" GridPane.rowIndex="5" />
            <Spinner id="spinnerDelay" fx:id="spinnerDelay" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.columnSpan="2147483647" GridPane.hgrow="ALWAYS" GridPane.rowIndex="5" />
            <CheckBox fx:id="cbUniqueName" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Make name unique (don't overwrite)" GridPane.columnSpan="2147483647" GridPane.rowIndex="2" />
            <Label id="labelDelay" GridPane.columnIndex="2" GridPane.rowIndex="2" />
            <Label text="Format" GridPane.rowIndex="4" />
            <ComboBox fx:id="comboFormat" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.columnSpan="2147483647" GridPane.hgrow="ALWAYS" GridPane.rowIndex="4" />
            <Label text="Current window" GridPane.rowIndex="7" />
